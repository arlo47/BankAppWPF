<Window x:Class="Bank.UpdateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Update User" Height="250" Width="250">
    <StackPanel Margin="20">

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Id" Margin="0,0,0,5"/>
            <TextBlock x:Name="txtbId" Text="##" Grid.Column="1" Margin="0,0,0,5"/>

            <TextBlock Text="Account Number" Grid.Row="1" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtbAccountNumber" Text="##" Grid.Column="1" Grid.Row="1" Margin="0,5,0,0"/>

        </Grid>
        <TextBlock Text="Name" Margin="0,5,0,0" />
        <TextBox x:Name="txtName" Margin="0,0,0,5"/>

        <TextBlock Text="Password" Margin="0,5,0,0" />
        <PasswordBox x:Name="pwPassword" Margin="0,0,0,5"/>

        <Button x:Name="btnUpdateUser" Content="Update User" Margin="0,10,0,0" Click="BtnUpdateUser_Click"/>

    </StackPanel>
</Window>
