<Window x:Class="Bank.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Login" Height="225" Width="300">

    <StackPanel Margin="20">
        <TextBlock Text="Id" Margin="5,5,5,0"/>
        <TextBox x:Name="txtId" Margin="5,0,5,5"/>

        <TextBlock Text="Password" Margin="5,5,5,0"/>
        <PasswordBox x:Name="pwPassword" Margin="5,0,5,5" />

        <Button x:Name="btnLogin" Content="Login" Height="50" Margin="5" Click="BtnLogin_Click"/>

    </StackPanel>
</Window>
