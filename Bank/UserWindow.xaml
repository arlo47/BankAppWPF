<Window x:Class="Bank.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="New User" Height="200" Width="250">
    <StackPanel Margin="20">
        <TextBlock Text="Name" Margin="0,5,0,0"/>
        <TextBox x:Name="txtName" Margin="0,0,0,5"/>

        <TextBlock Text="Password" Margin="0,5,0,0" />
        <PasswordBox x:Name="pwPassword" Margin="0,0,0,5"/>

        <Button x:Name="btnAddUser" Content="Add User" Margin="0,10,0,0" Click="BtnAddUser_Click"/>

    </StackPanel>
</Window>
